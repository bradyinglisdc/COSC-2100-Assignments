<Application x:Class="Assignment4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Assignment4"
             StartupUri="Windows/MainMenuWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Button Colors -->
            <Brush x:Key="ButtonBackColorDark">#A0A0A0</Brush>
            <Brush x:Key="ButtonForeColorDark">#FFFFFF</Brush>

            <!-- Button Styles -->
            <Style x:Key="MainMenuButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource ButtonBackColorDark}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonForeColorDark}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="Minecraftia"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Padding" Value="0,5"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
