<!--
 * Title: GenericButton.xaml
 * Name: Brady Inglis (100926284)
 * Date: 2024-12-05
 * Purpose: To provide a blank-slate button with full control - no default templates.
            Note a hidden button is included in this control; this is to enable keyboard shortcuts.
 -->

<Border x:Class="FinalProject.GenericButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
    <Grid x:Name="grdContainer">
        <TextBlock x:Name="tboContent"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        <Button x:Name="btnHidden"
                Width="0"
                Height="0"/>
    </Grid>
</Border>
